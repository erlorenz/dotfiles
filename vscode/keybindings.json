// MACOS
[
  // NAVIGATION
  // ctrl is better than cmd
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpenNavigateNextInRecentFilesPicker",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+s",
    "command": "workbench.action.files.save"
  },
  {
    "key": "ctrl+shift+p",
    "command": "workbench.action.showCommands"
  },
  // toggle open terminal
  {
    "key": "ctrl+t",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  // split terminal
  {
    "key": "ctrl+; v",
    "command": "workbench.action.terminal.split",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.terminal.focusNextPane",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  // move through intellisense
  {
    "key": "ctrl+j",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  // move through top quickmenu
  {
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenSelectNext",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": "inQuickOpen"
  },

  // FILE EXPLORER
  // Move to and away like normal splits
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusFirstEditorGroup",
    "when": "focusedView == 'workbench.explorer.fileView'"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "activeEditorGroupIndex == 1"
  },
  // File management
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "shift+a",
    "command": "explorer.newFolder",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "d",
    "command": "moveFileToTrash",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "r",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "enter",
    "command": "list.select",
    "when": "listFocus && !inputFocus"
  },

  // Leader hotkeys
  {
    "key": "ctrl+; e",
    "command": "workbench.files.action.focusFilesExplorer"
  },
  {
    "key": "ctrl+; e",
    "command": "workbench.action.toggleSidebarVisibility",
    // not sure if I want it to close or just go back
    // "command": "workbench.action.focusActiveEditorGroup",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "ctrl+; d",
    "command": "workbench.view.debug"
  },
  {
    "key": "ctrl+; g",
    "command": "workbench.view.scm"
  },
  {
    "key": "ctrl+; x",
    "command": "workbench.extensions.action.focusExtensionsView"
  },
  {
    "key": "ctrl+; b",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "ctrl+; l",
    "command": "workbench.action.toggleCenteredLayout"
  },
  {
    "key": "ctrl+; m",
    "command": "workbench.action.toggleFullScreen"
  },
  {
    "key": "ctrl+; f f",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "ctrl+; f g",
    "command": "workbench.action.experimental.quickTextSearch"
  },
  {
    "key": "ctrl+; f r",
    "command": "workbench.action.replaceInFiles"
  }
]
